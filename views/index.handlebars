<div class="image-wrapper">
    <div id="content-wrapper">
        <div class="row">

            <div class="col s12 m5">
                {{#grouped_each 5 veggies}}
                <div class="col s12 valign-wrapper">
                    {{#each this }}
                    <div class="col s2">
                        <img class="responsive-img hvr-animate veg" data-name="{{ name }}" data-image="{{ loc }}" src="{{ loc }}">
                    </div>
                    {{/each}}
                </div>
                {{/grouped_each}}
            </div>

            <div class="col s12 m6">
                <div class="row">
                    <div class="col s12">
                        <div class="card large grey darken-1" style="opacity:0.9">
                            <div class="card-content white-text">
                                <span class="card-title">Pick Your Favorites!</span>
                                <p>We're putting together this week's CSA boxes. Pick four vegetable types that you are most
                                    excited for, and we'll make sure you get an extra portion of your favorites with this
                                    week's delivery.</p>

                                <form class="col s12">
                                    <div class="row">
                                        <div class="input-field col s10">
                                            <select>
                                                <option value="" disabled selected>Select your username</option>
                                                {{#each users}}
                                                    <option>{{this.name}}</option>
                                                {{/each}}                                           
                                            </select>
                                        </div>
                                        <a class="btn-floating btn-large modal-trigger" data-target="modal1" id="new-user-modal">
                                            <i class="material-icons">add</i></a>
                                    </div>
                                </form>


                                <div class="row">
                                    <div class="col s12" id="veggies">
                                        <div class="row">
                                        </div>
                                    </div>
                                </div>

                                <div class="card-action center">
                                    <a class="waves-effect waves-light btn" id="start-over">Start Over</a>
                                    <a class="waves-effect waves-light disabled btn" id="submit">Submit</a>
                                    <a class="waves-effect waves-light btn modal-trigger" id="collect" href="#modal2">Collect Share</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div id="modal1" class="modal">
                <div class="modal-content">
                    <h4>Welcome!</h4>
                    <form class="col s12" action="/" method="POST">
                        <div class="row">
                            <div class="input-field col s8">
                                <i class="material-icons prefix">account_circle</i>
                                <input id="icon_prefix" type="text" class="validate userInp">
                                <label for="icon_prefix">Your Username</label>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat" id="add-user">Add</a>
                        </div>
                    </form>
                </div>

            </div>

            <div id="modal2" class="modal bottom-sheet">
                <div class="modal-content">
                    <h4>Current Orders</h4>
                    <ul class="collection">

                        {{#each orders}} {{#if !this.collected}}
                        <li class="collection-item avatar">
                            <span class="title">Title</span>
                            {{this.name}}

                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="sleepy" value="false">
                                <button type="submit">WAKE UP!</button>
                            </form>

                            {{> cats/delete-cat}}
                        </li>
                        {{/if}} {{/each}}

                        <li class="collection-item avatar">

                            <span class="title">Title</span>
                            <p>First Line <br> <a href="#!" class="secondary-content">Edit Order</a>
                            </p>
                            <p>
                                <a href="#!" class="secondary-content">Collect Share</a>
                                <br>
                                <a href="#!" class="secondary-content">Edit Order</a>
                            </p>
                        </li>
                        <li class="collection-item avatar">
                            <span class="title">Title</span>
                            <p>First Line <br> Second Line
                            </p>
                            <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
                        </li>
                        <li class="collection-item avatar">
                            <i class="material-icons circle green">insert_chart</i>
                            <span class="title">Title</span>
                            <p>First Line <br> Second Line
                            </p>
                            <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
                        </li>
                        <li class="collection-item avatar">
                            <i class="material-icons circle red">play_arrow</i>
                            <span class="title">Title</span>
                            <p>First Line <br> Second Line
                            </p>
                            <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
                        </li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Done</a>
                </div>
            </div>


        </div>
    </div>
</div>