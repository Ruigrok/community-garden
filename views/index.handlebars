<div class="row">

    <div class="col s12 m5">
        {{#grouped_each 5 veggies}}
        <div class="col s12 valign-wrapper">
            {{#each this }}
            <div class="col s2">
                <img class="responsive-img hvr-animate veg" data-name="{{ name }}" data-image="{{ loc }}" src="{{ loc }}">
            </div>
            {{/each}}
        </div>
        {{/grouped_each}}
    </div>

    <div class="col s12 m6">
        <div class="row">
            <div class="col s12">
                <div class="card large grey darken-1" style="opacity:0.9">
                    <div class="card-content white-text">
                        <span class="card-title">Pick Your Favorites!</span>
                        <p>We're putting together this week's CSA boxes. Pick four vegetable types that you are most excited
                            for, and we'll make sure you get an extra portion of your favorites with this week's delivery.</p>

                        <form class="col s12">
                            <div class="row">
                                <div class="input-field col s10">
                                    <select id="select-user">
                                                <option id="default-select" value="" disabled selected>Select your username</option>
                                                {{#each users}}
                                                    <option value="{{this.id}}">{{this.name}}</option>
                                                {{/each}}                                           
                                            </select>
                                </div>
                                <a class="btn-floating btn-large modal-trigger waves-effect waves-light" data-target="modal1" id="new-user-modal">
                                            <i class="material-icons">add</i></a>
                            </div>
                        </form>

                        <div class="row">
                            <div class="col s12" id="veggies">
                                <div class="row">
                                </div>
                            </div>
                        </div>

                        <div class="card-action center">
                            <a class="waves-effect waves-light btn" id="start-over">Start Over</a>
                            <a class="waves-effect waves-light disabled btn" id="submit">Submit</a>
                            <a class="waves-effect waves-light btn modal-trigger" id="collect" href="/orders">Collect Share</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="modal1" class="modal">
        <div class="modal-content">
            <h4>Welcome!</h4>
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s8">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="icon_prefix" type="text" class="validate userInp">
                        <label for="icon_prefix" id="reset-input">Add Username</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat" id="add-user">Add</a>
                </div>
            </form>
        </div>

    </div>

</div>